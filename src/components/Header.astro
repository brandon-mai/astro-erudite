---
import Container from '@/components/Container.astro'
import Link from '@/components/Link.astro'
import { MobileMenuV2 } from '@/components/ui/mobile-menu'
import { ModeToggleSimple, ModeToggleV2 } from '@/components/ui/mode-toggle'
import { NAV_LINKS, SITE } from '@/consts'
import { Image } from 'astro:assets'
import { MdOutlineKeyboardArrowRight } from "react-icons/md"
---

<header
  class="sticky top-0 z-10 bg-background/50 backdrop-blur-md"
  transition:persist
>
  <Container>
    <div class="flex flex-wrap items-center justify-between gap-4 py-4">
      <Link
        href="/"
        class="hover:text-primary flex shrink-0 items-center gap-2 text-xl font-medium transition-colors duration-300"
      >
        <!-- <Image src={logo} alt="Logo" class="size-8" /> -->
        <MdOutlineKeyboardArrowRight className='size-7' />
        <span class="relative">
          {SITE.TITLE}
          <span class="absolute right-0 top-0 inline-block w-[0.65rem] h-full bg-foreground animate-blink" />
          <span class="absolute right-0 top-0 text-background animate-blink">{SITE.TITLE.slice(-1)}</span>
        </span>
      </Link>
      <div class="flex items-center gap-2 md:gap-4">
        <nav class="hidden items-center gap-4 text-sm sm:gap-6 md:flex">
          {
            NAV_LINKS.map((item) => (
              <Link
                href={item.href}
                class="capitalize text-foreground/60 transition-colors hover:text-foreground/80"
              >
                {item.label}
              </Link>
            ))
          }
        </nav>
        <MobileMenuV2 client:load transition:persist />
        <ModeToggleV2 client:load transition:persist />
      </div>
    </div>
  </Container>
</header>
